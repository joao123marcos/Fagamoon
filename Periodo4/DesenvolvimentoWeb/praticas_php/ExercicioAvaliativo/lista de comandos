-----------Criando a tabela-------------------------
CREATE TABLE pessoa(
  idPessoa int unsigned NOT null AUTO_INCREMENT,
  nomePessoa varchar(60),
  sobrenomePessoa varchar(60),
  idadePessoa int,
  PRIMARY key(idPessoa)
);
-----------inserindo dados na table
insert INTO pessoa(nomePessoa,sobrenomePessoa,idadePessoa)
VALUES('JoÃ£o Marcos','Santos Pires',26);

